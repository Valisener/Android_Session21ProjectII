<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/details_crew_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <!--TextView that displays crew name-->
    <TextView
        android:id="@+id/details_crew_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="middle"
        android:maxWidth="@dimen/textview_max_width"
        android:singleLine="true"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/details_crew_photo"
        app:layout_constraintStart_toStartOf="@+id/details_crew_photo"
        app:layout_constraintTop_toBottomOf="@+id/details_crew_photo" />

    <!--TextView that displays crew job title-->
    <TextView
        android:id="@+id/details_crew_job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="middle"
        android:maxWidth="@dimen/textview_max_width"
        android:singleLine="true"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/details_crew_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/details_crew_name"
        app:layout_constraintTop_toBottomOf="@+id/details_crew_name" />
</android.support.constraint.ConstraintLayout>